<p style="color: green"><%= notice %></p>

<div class="container">
  <div class="container text-center my-4">
  </div>

<div class="card-grid">
  <% @listings.each do |listing| %>
  <div>
    <a href="<%= new_listing_booking_path(listing) %>" onclick="event.stopPropagation()"  style="text-decoration: none;">
      <div class="card h-100 card-border" style="width: 24rem;">
        <%= cl_image_tag listing.photo.key, crop: :fill, class:"card-image" %>
        <div class="card-body">
          <h5 class="card-title"><%= listing.title %></h5>
          <p class="card-text"><%= listing.description %></p>
          <p class="card-text"><%= "For: #{listing.pet_types}" %></p>
          <div class="d-flex justify-content-between align-items-center">
            <h4 style="color: black; background-color: light-grey;" class="badge badge-pill badge-light m-1"><%= "#{listing.price_per_night}$/night" %></h4>
          </div>
        </div>
      </div>
    </a>
  </div>
  <% end %>
</div>

</div>
