<p style="color: green"><%= notice %></p>

<div class="container">
  <div class="container text-center my-4">
    <h1>Listings</h1>
  </div>

  <div class="row d-flex justify-content-around">
    <% @listings.each do |listing| %>
    <div class="col col-md-3 m-3">
      <div class="card h-100" style="width: 18rem;">
        <%= image_tag "logo.png", class:"card-img-top" %>
        <div class="card-body">
          <h5 class="card-title"><%= listing.title %></h5>
          <p class="card-text"><%= listing.description %></p>
          <p class="card-text"><%= "For: #{listing.pet_types} - Max: #{listing.max_occupancy}" %></p>
          <div class="d-flex justify-content-between align-items-center">
            <h4 style="color: black; background-color: light-grey;" class="badge badge-pill badge-light m-1"><%= "#{listing.price_per_night}$/night" %></h4>
            <%= link_to "More info", listing, class:"btn btn-sm btn-outline-primary" %>
          </div>
        </div>
      </div>
    </div>
    <% end %>
  </div>

</div>
