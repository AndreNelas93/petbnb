<p style="color: green"><%= notice %></p>

<div class="container">
  <div class="container text-center my-4">
  </div>

<div class="card-grid">
  <% @listings.each do |listing| %>
  <div class="center-card">
    <a href="<%= listing_path(listing) %>" onclick="event.stopPropagation()"  style="text-decoration: none;">
      <div class="card h-100 card-border" style="width: 18rem;">
        <%= cl_image_tag listing.photo.key, crop: :fill, class:"card-image" %>
        <div class="card-body">
          <h5 class="card-title"><%= listing.title %></h5>
          <hr>
          <div class="d-flex justify-content-between">
            <p class="card-text"><%= "$#{listing.price_per_night}/night" %></p>
            <p class="card-text"><%= "For: #{listing.pet_types}" %></p>
          </div>
        </div>
      </div>
    </a>
  </div>
  <% end %>
</div>

</div>
