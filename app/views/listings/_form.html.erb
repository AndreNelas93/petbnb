
<%= simple_form_for(@listing) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :title %>
    <%= f.input :pet_types, collection: ["Dogs", "Cats", "Snakes"] %>
    <%= f.input :description %>
    <%= f.input :address %>
    <%= f.input :max_occupancy %>
    <%= f.input :price_per_night %>
    <%= f.input :max_stay %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, class:"btn btn-sm btn-outline-success my-4" %>
  </div>
  <%= link_to "Back to listings", listings_path, class:"btn btn-sm btn-outline-secondary mb-5"%>
<% end %>
